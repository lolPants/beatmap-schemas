{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/lolPants/beatmap-schemas/master/schemas/difficulty.schema.json",
  "type": "object",
  "title": "Difficulty",
  "description": "Beat Saber Beatmap Level",
  "additionalProperties": false,
  "allOf": [
    {
      "required": [
        "_version",
        "_events",
        "_notes",
        "_obstacles"
      ]
    },
    {
      "if": {
        "properties": {
          "_version": {
            "type": "string",
            "pattern": "^([2-9]\\d*)\\.([2-9]\\d*)\\.(0|[1-9]\\d*)$"
          }
        }
      },
      "then": {
        "required": [
          "_waypoints"
        ]
      }
    }
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "_version": {
      "type": "string",
      "title": "Beatmap Version",
      "default": "2.2.0",
      "examples": [
        "2.2.0"
      ],
      "pattern": "^([2-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },
    "_events": {
      "type": "array",
      "title": "Events",
      "description": "Environment and lighting events",
      "items": { "$ref": "#/definitions/event" }
    },
    "_notes": {
      "type": "array",
      "title": "Notes and Bombs",
      "items": { "$ref": "#/definitions/note" }
    },
    "_obstacles": {
      "type": "array",
      "title": "Obstacles",
      "description": "Walls",
      "items": { "$ref": "#/definitions/obstacle" }
    },
    "_waypoints": {
      "type": "array",
      "title": "Waypoints",
      "items": { "$ref": "#/definitions/waypoint" }
    },
    "_specialEventsKeywordFilters": {
      "type": "object",
      "title": "Special Events Keyword Filters",
      "additionalProperties": false,
      "properties": {
        "_keywords": {
          "type": "array",
          "items": { "$ref": "#/definitions/keyword" }
        }
      }
    },
    "_customData": {
      "type": "object",
      "title": "Custom Data",
      "description": "Difficulty custom data",
      "additionalProperties": true,
      "properties": {}
    }
  },
  "definitions": {
    "event": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "_time",
        "_type",
        "_value"
      ],
      "properties": {
        "_time": {
          "type": "number",
          "title": "Time",
          "description": "Time offset in beats"
        },
        "_type": {
          "type": "integer",
          "title": "Type",
          "description": "Type of this event"
        },
        "_value": {
          "type": "integer",
          "title": "Value",
          "description": "Parameter value for this event"
        },
        "_customData": {
          "type": "object",
          "title": "Custom Data",
          "description": "Environment / lighting event custom data",
          "additionalProperties": true
        }
      }
    },
    "note": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "_cutDirection",
        "_lineIndex",
        "_lineLayer",
        "_time",
        "_type"
      ],
      "properties": {
        "_cutDirection": {
          "type": "integer",
          "examples": [
            0,
            1,
            2,
            3,
            4,
            5,
            6,
            7,
            8
          ]
        },
        "_lineIndex": {
          "type": "integer",
          "title": "Line Index",
          "description": "Note horizontal position, starting at far left"
        },
        "_lineLayer": {
          "type": "integer",
          "title": "Line Layer",
          "description": "Note vertical position, starting at bottom"
        },
        "_time": {
          "type": "number",
          "title": "Time",
          "description": "Time offset in beats"
        },
        "_type": {
          "type": "integer",
          "title": "Type",
          "description": "Type of this note",
          "examples": [
            0,
            1,
            3
          ]
        },
        "_customData": {
          "type": "object",
          "title": "Custom Data",
          "description": "Note / bomb custom data",
          "additionalProperties": true
        }
      }
    },
    "obstacle": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "_duration",
        "_lineIndex",
        "_time",
        "_type",
        "_width"
      ],
      "properties": {
        "_duration": {
          "type": "number",
          "title": "Duration",
          "description": "Duration in beats"
        },
        "_lineIndex": {
          "type": "integer",
          "title": "Line Index",
          "description": "Obstacle horizontal position, starting at far left"
        },
        "_time": {
          "type": "number",
          "title": "Time",
          "description": "Time offset in beats"
        },
        "_type": {
          "type": "integer",
          "title": "Type",
          "description": "Type of this obstacle",
          "examples": [
            0,
            1
          ]
        },
        "_width": {
          "type": "integer",
          "title": "Width",
          "description": "Width of this obstacle"
        },
        "_customData": {
          "type": "object",
          "title": "Custom Data",
          "description": "Obstacle custom data",
          "additionalProperties": true
        }
      }
    },
    "waypoint": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "_time",
        "_lineIndex",
        "_lineLayer",
        "_offsetDirection"
      ],
      "properties": {
        "_time": {
          "type": "number",
          "title": "Duration",
          "description": "Duration in beats"
        },
        "_lineIndex": {
          "type": "integer",
          "title": "Line Index",
          "description": "Note horizontal position, starting at far left"
        },
        "_lineLayer": {
          "type": "integer",
          "title": "Line Layer",
          "description": "Note vertical position, starting at bottom"
        },
        "_offsetDirection": {
          "type": "integer",
          "title": "Offset Direction",
          "enum": [
            0,
            1,
            2,
            3,
            4,
            5,
            6,
            7,
            9
          ]
        }
      }
    },
    "keyword": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "_keyword",
        "_specialEvents"
      ],
      "properties": {
        "_keyword": {
          "type": "string",
          "title": "Keyword",
          "minLength": 1
        },
        "_specialEvents": {
          "type": "array",
          "title": "Special Events",
          "items": {
            "type": "integer"
          }
        }
      }
    }
  }
}
